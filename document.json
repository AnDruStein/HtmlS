<script type="text/javascript">
function onlyNumbers(text) {
  var res = ""
  for(var i = 0; i < text.length; i++) {
    for(var e = 0; e <= 9; e++) {
      if(text[i] == e.toString()) { res += text[i]; }
          }
        }
   if(res) { return eval(res) } else { return 0 }
}
